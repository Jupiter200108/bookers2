
<div class='container'>
  <div class='row'>
    <%= render 'books/book', book: @books, user: @user  %>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <% if @user == current_user %>
    		<tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_id(current_user)" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_id(current_user)", "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% else %>
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
        </tr>
        <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>